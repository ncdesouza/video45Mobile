<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.video45.video45">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To let the user choose whatever picter they want when signing up -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Drakify">
        <activity
            android:name="com.video45.StartActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.video45.signup.SignUpActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.video45.StartActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.video45.StartActivity" />
        </activity>
        <activity
            android:name="com.video45.login.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.video45.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName="com.video45.StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.video45.StartActivity" />
        </activity>
        <activity android:name="com.video45.video.editor.EditorActivity" />
        <activity android:name="com.video45.video.selecter.SelectVideoActivity"></activity>
    </application>

</manifest>
